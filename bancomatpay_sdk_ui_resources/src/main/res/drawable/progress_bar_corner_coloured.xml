<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp"/>
            <solid android:color="@color/spending_limits_progressbar_background"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp"/>
                <gradient
                    android:startColor="#3CBDEE"
                    android:centerColor="#0385B6"
                    android:endColor="#033346"
                    android:angle="45" />
            </shape>
        </clip>
    </item>
</layer-list>