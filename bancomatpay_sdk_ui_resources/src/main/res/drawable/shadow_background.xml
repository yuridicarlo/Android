<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#1A444444"
                android:startColor="#1A444444"
                android:type="linear"> <!-- Change this value to have the correct shadow angle, must be multiple from 45 -->
            </gradient>
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:right="1.5dp" android:left="1.5dp" android:bottom="2dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>