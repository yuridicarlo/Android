<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ToolbarSimple">
        <attr name="leftImg" format="integer" />
        <attr name="rightImg" format="integer" />
        <attr name="rightCenterImg" format="integer" />
        <attr name="centerImg" format="integer" />
        <attr name="backgroundSrc" format="integer" />
    </declare-styleable>

    <declare-styleable name="ToolbarHome">
        <attr name="leftImgHome" format="integer" />
        <attr name="centerRightImgHome" format="integer" />
        <attr name="centerLeftImgHome" format="integer" />
        <attr name="hasDoubleLogo" format="boolean" />
        <attr name="backgroundSrcHome" format="integer" />
    </declare-styleable>

    <declare-styleable name="LabelTelephone">
        <attr name="showPrefixSelector" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LabelPayment">
        <attr name="maxLength" format="integer" />
        <attr name="currencySymbol" format="string" />
    </declare-styleable>

    <declare-styleable name="KeyboardCustom">
        <attr name="submitMaxLength" format="integer" />
        <attr name="submitMinLength" format="integer" />
    </declare-styleable>

    <declare-styleable name="CustomLottieAnimationView">
        <attr name="lottie_placeholder" format="reference" />
    </declare-styleable>

    <declare-styleable name="ProgressBarSpendingLimits">
        <attr name="subtitleName" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomEditText">
        <attr name="showErrorText" format="boolean" />
        <attr name="showDefaultCancel" format="boolean" />
        <attr name="hint" format="string" />
        <attr name="elevation" format="dimension" />
        <attr name="prefixSelector" format="boolean" />
        <attr name="maxCharacters" format="integer" />
    </declare-styleable>

    <declare-styleable name="SettingsSeparatorHeader">
        <attr name="title" format="string" />
    </declare-styleable>

    <declare-styleable name="CJSeparatorHeader">
        <attr name="title_cj" format="string" />
    </declare-styleable>

    <declare-styleable name="LabelPaymentAmount">
        <attr name="cardElevation" format="dimension" />
        <attr name="labelTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CameraView">
        <!--
          Set this to true if you want the CameraView to adjust its bounds to preserve the aspect
          ratio of its camera preview.
        -->
        <attr name="android:adjustViewBounds"/>
        <!-- Direction the camera faces relative to device screen. -->
        <attr name="facing" format="enum">
            <!-- The camera device faces the opposite direction as the device's screen. -->
            <enum name="back" value="0"/>
            <!-- The camera device faces the same direction as the device's screen. -->
            <enum name="front" value="1"/>
        </attr>
        <!-- Aspect ratio of camera preview and pictures. -->
        <attr name="aspectRatio" format="string"/>
        <!-- Continuous auto focus mode. -->
        <attr name="autoFocus" format="boolean"/>
        <!-- The flash mode. -->
        <attr name="flash" format="enum">
            <!-- Flash will not be fired. -->
            <enum name="off" value="0"/>
            <!--
              Flash will always be fired during snapshot.
              The flash may also be fired during preview or auto-focus depending on the driver.
            -->
            <enum name="on" value="1"/>
            <!--
              Constant emission of light during preview, auto-focus and snapshot.
              This can also be used for video recording.
            -->
            <enum name="torch" value="2"/>
            <!--
              Flash will be fired automatically when required.
              The flash may be fired during preview, auto-focus, or snapshot depending on the
              driver.
            -->
            <enum name="auto" value="3"/>
            <!--
              Flash will be fired in red-eye reduction mode.
            -->
            <enum name="redEye" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="BottomNavigationViewIndicator">
        <attr name="targetBottomNavigation" format="reference"/>
        <attr name="clipableBackground" format="reference|color"/>
    </declare-styleable>

</resources>