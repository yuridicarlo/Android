<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/merchant_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_95"
    android:foreground="?attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contact_merchant_image_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/size_20"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginEnd="@dimen/size_10"
        android:layout_marginBottom="@dimen/size_20"
        android:src="@drawable/placeholder_merchant" />

    <ImageView
        android:id="@+id/contact_merchant_isactive"
        style="@style/SlidingPanelPriceStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/size_20"
        android:layout_marginEnd="@dimen/size_20"
        android:gravity="center"
        android:src="@drawable/ico_logo_bcm_rubrica" />

    <LinearLayout
        android:id="@+id/contact_merchant_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/contact_merchant_image_profile"
        android:gravity="center|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_merchant_name"
            style="@style/SlidingPanelTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Claudio Consoniaa" />

        <TextView
            android:id="@+id/contact_merchant_number"
            style="@style/SlidingPanelLabelStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Denaro inviato" />

    </LinearLayout>

    <View
        style="@style/LineG1"
        android:layout_below="@+id/contact_merchant_image_profile"
        android:layout_alignStart="@+id/contact_merchant_text"
        android:layout_marginTop="-1dp" />

</RelativeLayout>