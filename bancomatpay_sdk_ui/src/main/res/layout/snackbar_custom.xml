<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/snackbar_message_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="12dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/text_snackbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_text_medium"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/layout_snackbar_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="right"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_snackbar_1"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:fontFamily="@font/lato_text_medium"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            app:rippleColor="@color/ripple_color_light" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_snackbar_2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_text_medium"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            app:rippleColor="@color/ripple_color_light" />

    </LinearLayout>

</LinearLayout>