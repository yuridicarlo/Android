<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<ImageView
		android:id="@+id/image_tab_item"
		android:layout_width="42dp"
		android:layout_height="23dp"
		tools:src="@drawable/home_store_selector"
		android:layout_marginTop="9dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@id/label_tab_item"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>
	<TextView
		android:id="@+id/label_tab_item"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textSize="12sp"
		tools:text="settings"
		android:textColor="@color/text_color_selector"
		android:layout_marginTop="1dp"
		app:layout_constraintTop_toBottomOf="@id/image_tab_item"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>