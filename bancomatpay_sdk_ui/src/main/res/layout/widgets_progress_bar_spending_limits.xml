<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginRight="@dimen/size_20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/ProgressBarSpendingLimitsGenericLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/progress_bar_spending_limits_residual" />

            <TextView
                android:id="@+id/progress_bar_spending_limits_spendibile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ProgressBarSpendingLimitsBigPriceLabel"
                android:text="70,00 €" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar_spending_limits"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_14"
            android:layout_marginTop="@dimen/size_10"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progress_bar_corner_coloured" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/progress_bar_spending_limits_subtitle"
                style="@style/ProgressBarSpendingLimitsGenericLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_15"
                android:layout_weight="1"
                android:text="@string/progress_bar_spending_limits_limit_daily" />

            <TextView
                android:id="@+id/progress_bar_spending_limits_limit"
                style="@style/ProgressBarSpendingLimitsGenericLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200,00 €" />

        </LinearLayout>

    </LinearLayout>

</layout>